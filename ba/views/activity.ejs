            </form>
            <form method="GET" action="/money/edit/<%= m._id %>" style="display:inline;">
              <button type="submit">‚úèÔ∏è</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
