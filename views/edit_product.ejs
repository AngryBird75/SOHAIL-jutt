<%- include('partials/header', { title: 'Edit Product Record' }) %>
<%- include('partials/nav') %>

<div class="container">
  <h2>Edit Product Record</h2>
  <form action="/product/edit/<%= record._id %>" method="POST">
    <label>Type:</label>
    <select name="type" required>
      <option value="receive" <%= record.type === 'receive' ? 'selected' : '' %>>Receive</option>
      <option value="send" <%= record.type === 'send' ? 'selected' : '' %>>Send</option>
    </select>

    <label>Person:</label>
    <input type="text" name="person" value="<%= record.person %>" required>

    <label>Product:</label>
    <input type="text" name="product" value="<%= record.product %>" required>

    <label>Weight (kg):</label>
    <input type="number" step="0.01" name="weight" value="<%= record.weight %>" required>

    <label>Rate (per kg):</label>
    <input type="number" step="0.01" name="rate" value="<%= record.rate %>" required>

    <label>Date:</label>
    <input type="date" name="date" value="<%= record.date.toISOString().split('T')[0] %>" required>

    <button type="submit">Update</button>
  </form>
</div>
