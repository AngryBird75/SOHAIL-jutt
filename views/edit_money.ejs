<%- include('partials/header', { title: 'Edit Money Record' }) %>
<%- include('partials/nav') %>

<div class="container">
  <h2>Edit Money Record</h2>
  <form action="/money/edit/<%= money._id %>" method="POST">
    <label>Type:</label>
    <select name="type" required>
      <option value="receive" <%= money.type === 'receive' ? 'selected' : '' %>>Receive</option>
      <option value="send" <%= money.type === 'send' ? 'selected' : '' %>>Send</option>
    </select>

    <label>Person:</label>
    <input type="text" name="person" value="<%= money.person %>" required>

    <label>Amount:</label>
    <input type="number" step="0.01" name="amount" value="<%= money.amount %>" required>

    <label>Payment Type:</label>
    <select name="paymentType" required>
      <option value="Cash" <%= money.paymentType === 'Cash' ? 'selected' : '' %>>Cash</option>
      <option value="Cheque" <%= money.paymentType === 'Cheque' ? 'selected' : '' %>>Cheque</option>
      <option value="Bank" <%= money.paymentType === 'Bank' ? 'selected' : '' %>>Online</option>
    </select>

    <label>Bank Name (if Cheque/Online):</label>
    <input type="text" name="bankName" value="<%= money.bankName %>">

    <label>Date:</label>
    <input type="date" name="date" value="<%= money.date.toISOString().split('T')[0] %>" required>

    <button type="submit">Update</button>
  </form>
</div>
